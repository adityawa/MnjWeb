</div>
<div class="row">
    <div class="col-md-12">

        <div class="card2">
            <div class="bs-component">
                <form id="frm1" class=" form-inline">
                    <div class="form-group">
                        <label for="exampleInputName2">Period</label>
                        <input type="text" class="form-control" id="txtPeriodStart" placeholder="Start">
                        <label for="exampleInputName2">~</label>
                        <input type="text" class="form-control" id="txtPeriodEnd" placeholder="End">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail2">Base On</label>
                        <select class="form-control" id="selBaseOn" name="selBaseOn" required>
                            <option value="0">Quantity</option>
                            <option value="1">Amount</option>
                        </select>
                        <label class="control-label " for="exampleInputEmail2">Gerai</label>

                        <select class="form-control" id="selGerai" name="selGerai" required>
                            <option value="">ALL</option>
                        </select>
                        <label class="control-label" for="exampleInputEmail2">Action</label>

                        <select class="form-control" id="selÀction" name="selÀction" required>
                            <option value="PREVIEW">Preview</option>
                            <option value="PRINT">Print</option>
                        </select>
                        <label for="exampleInputEmail2" class=" control-label">Type</label>
                        <select class="form-control" id="selRadio" name="selRadio" required>
                            <option value="ALL">All</option>
                            <option value="TREATMENT">Treatment</option>
                            <option value="PRODUCT">Product</option>
                        </select>
                        <button type="button" id="btnViewReport" class="btn-primary"><i class="fa fa-search" aria-hidden="true"></i> Search </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card" id="grid" style="display:none">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-12">
                        <table class="table table-hover table-bordered" id="gridResult">
                            <thead>
                                <tr>
                                    <th>Gerai</th>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Customer</th>
                                    <th>Item Name</th>
                                    <th>Qty</th>
                                    <th>Use</th>
                                    <th>Balance</th>
                                    <th>Unit Price</th>
                                    <th>Amount</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Therapis</th>
                                    <th>Commission %</th>
                                    <th>Commission Amt</th>
                                    <th>Inv No</th>
                                    <th>Item Code</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <iframe name="rpt" width="100%" height="500" id="rpt"></iframe>
            </div>
        </div>
    </div>
</div>